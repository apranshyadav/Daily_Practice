<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %>

<div class="row">
    <div class="col-6 mx-auto">
        <form action="/products/<%=foundProduct._id%>?_method=PATCH" method="POST">
            <div class="mb-3">
                <label for="naam">Name:</label>
                <input type="text" class="form-control" name="name" id="naam" placeholder="Name of the products" value="<%=foundProduct.name%>">
            </div>

            <div class="mb-3">
                <label for="img">Image:</label>
                <input type="text" class="form-control" name="img" id="img" placeholder="Image URL of the products" value="<%=foundProduct.img%>">
            </div>

            <div class="mb-3">
                <label for="paisa">Price:</label>
                <input type="number" class="form-control" name="price" id="paisa" placeholder="Price of the products" value="<%=foundProduct.price%>">
            </div>

            <div class="mb-3">
                <label for="desc">Description:</label>
                <textarea name="desc" id="desc" cols="30" rows="10" placeholder="Description of product"> <%=foundProduct.desc%></textarea>
            </div>
            <button class="btn btn-sm btn-success" type="sumbit">Edit Product</button>
        </form>
    </div>
</div>
    
</body>
</html>