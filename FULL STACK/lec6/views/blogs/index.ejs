<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Blogs</title>
  <style>
    /* Google Fonts */
@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap');

body {
  margin: 0;
  padding: 0;
  font-family: 'Poppins', sans-serif;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #fff;
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: flex-start;
}

.container {
  width: 90%;
  max-width: 1000px;
  margin-top: 2rem;
}

h1 {
  text-align: center;
  margin-bottom: 2rem;
  font-size: 2.5rem;
  animation: fadeDown 1s ease;
}

/* Blog Card */
.blog-list {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 1.5rem;
}

.blog-card {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(12px);
  border-radius: 15px;
  padding: 1.5rem;
  box-shadow: 0 8px 25px rgba(0,0,0,0.25);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  animation: fadeUp 0.8s ease forwards;
  opacity: 0;
}

.blog-card:hover {
  transform: translateY(-8px) scale(1.02);
  box-shadow: 0 12px 30px rgba(0,0,0,0.3);
}

.blog-card h2 {
  margin: 0.5rem 0;
  font-weight: 600;
}

.blog-card h3 {
  margin: 0.3rem 0;
  font-weight: 400;
}

.comment {
  margin: 0.8rem 0;
  font-style: italic;
  opacity: 0.9;
}

/* Button */
.view-btn {
  display: inline-block;
  margin-top: 1rem;
  padding: 0.6rem 1.2rem;
  background: #fff;
  color: #764ba2;
  text-decoration: none;
  border-radius: 25px;
  font-weight: 600;
  transition: all 0.3s ease;
}

.view-btn:hover {
  background: #764ba2;
  color: #fff;
  box-shadow: 0 4px 20px rgba(0,0,0,0.2);
  transform: scale(1.05);
}

/* Animations */
@keyframes fadeUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeDown {
  from {
    opacity: 0;
    transform: translateY(-30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

  </style>
</head>
<body>
  <div class="container">
    <h1>üìö Displaying All Blogs</h1>
    <div class="blog-list">
      <% for(let blog of blogs) { %>
        <div class="blog-card">
          <h2>ID: <%= blog.id %></h2>
          <h3>‚úç Author: <%= blog.author %></h3>
          <p class="comment">üí¨ <%= blog.comment %></p>
          <a href="/blogs/<%= blog.id %>" class="view-btn">View Blog</a>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>